% Library of additional logic operators %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% OR ELSE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

orelse A _B :- A, !.

orelse _A B :- B.

% IF %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% if A B :- orelse (not A) B.

if A B :- A, !, B.

if _A _B.

% IF NOT ELSE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

ifnotelse A _B C :- A, !, C.

ifnotelse _A B _C :- B.
